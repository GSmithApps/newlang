{
  "name": "MyLang",
  "scopeName": "source.mylang",
  "patterns": [
    {
      "name": "meta.initial-pipe.mylang",
      "match": "^(\\s*)(\\|)(\\s)",
      "captures": {
        "2": { "name": "initial_pipe.mylang" }
      }
    },
        {
      "name": "meta.directive.slash-line.mylang",
      "match": "^\\s*\\|\\s*(.*)*",
      "captures": {
        "1": { "name": "variable.other.mylang" }
      }
    },
    {
      "name": "meta.slash.mylang",
      "match": "(\\s*)(\\/)(\\s)",
      "captures": {
        "2": { "name": "keyword.control.mylang" }
      }
    }
  ]
}
