{
  "name": "mylang-syntax",
  "displayName": "MyLang Syntax",
  "description": "Ultra-simple syntax coloring for MyLang",
  "version": "0.0.14",
  "engines": { "vscode": "*" },
  "categories": ["Programming Languages"],
  "repository": {"url": "https://github.com/GSmithApps/newlang"},
  "contributes": {
    "languages": [
      {
        "id": "mylang",
        "aliases": ["MyLang", "mylang"],
        "extensions": [".mlg"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mylang",
        "scopeName": "source.mylang",
        "path": "./syntaxes/mylang.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "[Default Dark Modern]": {
          "textMateRules": [
              {
                "scope": "initial_pipe.mylang", 
                "settings": {
                    "foreground": "#414141" 
                }
            } 
          ]
        }
      }
    }
  }
}
